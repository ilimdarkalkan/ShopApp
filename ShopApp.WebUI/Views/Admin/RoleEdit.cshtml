@model RoleDetails

<h1 class="h3">
    Edit Role
</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-controller="admin" asp-action="RoleEdit">
            <input type="hidden" value="@Model.Role.Id" name="RoleId" />
            <input type="hidden" value="@Model.Role.Name" name="RoleName" />
            <h6 class="bg-info text-white p-1">Add To @Model.Role.Name</h6>
            <table class="table-bordered table-sm mb-3">
                @if (Model.NonMembers.Count() == 0)
                {
                    <tr>
                        <td colspan="2" style="width:600px">Bütün kullanıcılar role ait</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model.NonMembers)
                    {
                        <tr>
                            <td style="width:500px">@item.UserName</td>
                            <td>
                                <input style="width:150px" type="checkbox" name="IdsToAdd" value="@item.Id" />
                            </td>

                        </tr>
                    }
                }
            </table>

            <h6 class="bg-info text-white p-1">Remove Form @Model.Role.Name</h6>
            <table class="table-bordered table-sm">
                @if (Model.Members.Count() == 0)
                {
                    <tr>
                        <td colspan="2" style="width:600px">Role ait kullanıcı yok</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model.Members)
                    {
                        <tr>
                            <td style="width:200px">@item.UserName</td>
                            <td>
                                <input style="width:150px" type="checkbox" name="IdsToDelete" value="@item.Id" />
                            </td>
                        </tr>
                    }
                }
            </table>
            
                    <button type="submit" class="btn btn-primary mt-3">Save</button>
                
        </form>
    </div>
</div>