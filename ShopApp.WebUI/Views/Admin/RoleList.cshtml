@model IEnumerable<IdentityRole>

<div class="row">

    <div class="col-md-12">
        <h1 class="h2">Admin Role Lists</h1>
    </div><br />
    <a href="/admin/role/create" class="btn btn-primary btn-sm">Add Role</a>
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <td style="width:100px;">Id</td>
                <td style="width:100px;">Role Name</td>
                <td style="width:100px;"></td>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {


                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        
                        <td>@item.Name</td>
             
                        <td>
                            <a href="/admin/role/@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>

                            <form action="/Admin/role/delete" method="post" style="display:inline">
                                <input type="hidden" name="roleId" value="@item.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>

                        </td>
                    </tr>
                }
            }
            else
            {
                <div class="alert alert-warning">
                    <h3>
                        No Roles
                    </h3>
                </div>

            }
        </tbody>
    </table>
</div> 