@model Product

<div class="card mb-2">
    <img src="~/img/@Model.ImageUrl" alt="" class="card-img-top" height="250" />
    <div class="card-body">
        <h5 class="card-title">
            @Model.Name
        </h5>
        <small class="text-muted">
            <i class="fas fa-lira-sign">
                @Model.Price
            </i>
        </small>
    </div>
    <div class="card-footer text-center">
        <a asp-action="detail" asp-controller="shop" asp-route-url="@Model.Url" class="btn btn-primary btn-sm">
            Details
        </a>
        <a asp-action="addtocard" asp-controller="shop" asp-route-id="@Model.ProductId" class="btn btn-primary btn-sm">
            Add To Card
        </a>
    </div>
</div>