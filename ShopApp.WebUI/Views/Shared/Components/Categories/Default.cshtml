@model List<Category>

<div class="list-group">
    <a class="list-group-item list-group-item-action" href="/products">
        Tüm Ürünler
    </a>

    @foreach (var item in Model)
    {
        <a class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==item.Url?"active":"")"
           asp-controller="Shop"
           asp-action="list"
           asp-route-category="@item.Url">
            @item.Name
        </a>
    }
</div>